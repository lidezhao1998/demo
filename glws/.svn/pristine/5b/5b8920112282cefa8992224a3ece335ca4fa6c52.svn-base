<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('修改调拨单')" />
    <th:block th:include="include :: datetimepicker-css" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-allocation-edit" th:object="${kAllocation}">
            <input name="id" th:field="*{id}" type="hidden">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">调拨单号：</label>
                        <div class="col-sm-8">
                            <input name="oddnumber" th:field="*{oddnumber}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">物资名称：</label>
                        <div class="col-sm-8">
                            <input name="name" th:field="*{name}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">申请地区：</label>
                        <div class="col-sm-8">
                            <input name="applicationArea" th:field="*{applicationArea}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">调拨地区：</label>
                        <div class="col-sm-8">
                            <input name="allocationArea" th:field="*{allocationArea}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">调出时间：</label>
                    <div class="col-sm-8">
                        <div class="input-group date">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input name="allocationTime" th:value="${#dates.format(kAllocation.allocationTime, 'yyyy-MM-dd')}" class="form-control" placeholder="yyyy-MM-dd" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人：</label>
                        <div class="col-sm-8">
                            <input name="receiver" th:field="*{receiver}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">送货人：</label>
                    <div class="col-sm-8">
                        <input name="deliveryman" th:field="*{deliveryman}" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人联系方式：</label>
                        <div class="col-sm-8">
                            <input name="receiverNumber" th:field="*{receiverNumber}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">送货人联系方式：</label>
                    <div class="col-sm-8">
                        <input name="deliverymanNumber" th:field="*{deliverymanNumber}" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物编码：</label>
                        <div class="col-sm-8">
                            <input name="cargoCode" th:field="*{cargoCode}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">货物数量：</label>
                    <div class="col-sm-8">
                        <input name="cargoNumber" th:field="*{cargoNumber}" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物金额：</label>
                        <div class="col-sm-8">
                            <input name="cargoMoney" th:field="*{cargoMoney}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">货物名称：</label>
                    <div class="col-sm-8">
                        <input name="cargoName" th:field="*{cargoName}" class="form-control" type="text">
                    </div>
                </div>

            </div>
        </form>
    </div>
    <th:block th:include="include :: footer" />
    <th:block th:include="include :: datetimepicker-js" />
    <script type="text/javascript">
        var prefix = ctx + "system/allocation";
        $("#form-allocation-edit").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/edit", $('#form-allocation-edit').serialize());
            }
        }

        $("input[name='allocationTime']").datetimepicker({
            format: "yyyy-mm-dd",
            minView: "month",
            autoclose: true
        });
    </script>
</body>
</html>