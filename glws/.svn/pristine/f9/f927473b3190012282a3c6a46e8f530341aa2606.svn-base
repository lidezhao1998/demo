                <a class="btn btn-primary single disabled" onclick="$.operate.edit()" shiro:hasPermission="eceas:projects:edit">
                    <i class="fa fa-edit"></i> 修改
                </a>
                <a class="btn btn-danger multiple disabled" onclick="$.operate.removeAll()" shiro:hasPermission="eceas:projects:remove">
                    <i class="fa fa-remove"></i> 删除
