    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">
        var editFlag = [[${@permission.hasPermi('eceas:projects:edit')}]];
        var removeFlag = [[${@permission.hasPermi('eceas:projects:remove')}]];
        var prefix = ctx + "eceas/projects";

        $(function() {
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                evealUrl: prefix + "eveal",
                modalName: "天然林资源保护工程建设情况统计",
                showFooter: true,
                showSearch: false,
                showRefresh: false,
                showToggle: false,
                showColumns: false,
                columns: [{
                    checkbox: true
                },
                {
                    field : 'id', 
                    title : '天保生态工程ID',
                    visible: false
                },
                {
                    field : 'annual', 
                    title : '年度',
                    visible: false
                },
                {
                    field : 'area', 
                    title : '地区省份',
                    class : 'W100',
                    footerFormatter:function (value) {
                        return "合计";
                    }
                },
                {
                    field : 'afforestionAreaTotal', 
                    title : '造林面积总计',
                    align : 'center',
                    footerFormatter:function (value) {
                        var afforestionAreaTotal = 0;
                        for (var i in value) {
                            afforestionAreaTotal += parseFloat(value[i].afforestionAreaTotal);
                        }
                        return afforestionAreaTotal;
                    }
                },
                {
                    field : 'artificialAfforestionTotal', 
                    title : '人工造林合计',
                    align : 'center',
                    footerFormatter:function (value){
                        var artificialAfforestionTotal = 0;
                        for (var i in value){
                            artificialAfforestionTotal += parseFloat(value[i].artificialAfforestionTotal);
                        }
                        return artificialAfforestionTotal;
                    }
                },
/*                {
                    field : 'shrubArea', 
                    title : '灌木林面积'
                },*/
                {
                    field : 'airSendAfforest', 
                    title : '飞播造林',
                    align : 'center',
                    footerFormatter:function (value) {
                        var airSendAfforest = 0;
                        for (var i in value) {
                            airSendAfforest += parseFloat(value[i].airSendAfforest);
                        }
                        return airSendAfforest.toFixed(2);
                    }
                },
                {
                    field : 'newAfforestTotal', 
                    title : '当年新封山育林合计',
                    align : 'center',
                    footerFormatter:function (value) {
                        var newAfforestTotal = 0;
                        for (var i in value) {
                            newAfforestTotal += parseFloat(value[i].newAfforestTotal);
                        }
                        return newAfforestTotal;
                    }
                },
     /*           {
                    field : 'noNewAfforestArea', 
                    title : '无林地和疏林地新封山育林面积'
                },
                {
                    field : 'haveNewAfforestArea', 
                    title : '有林地和灌木林地新封山育林面积'
                },*/
                {
                    field : 'degraRepairArea', 
                    title : '退化林修复面积',
                    align : 'center',
                    footerFormatter:function (value) {
                        var degraRepairArea = 0;
                        for (var i in value) {
                            degraRepairArea += parseFloat(value[i].degraRepairArea);
                        }
                        return degraRepairArea;
                    }
                },
                {
                    field : 'forestTendArea', 
                    title : '森林抚育面积',
                    align : 'center',
                    footerFormatter:function (value) {
                        var forestTendArea = 0;
                        for (var i in value) {
                            forestTendArea += parseFloat(value[i].forestTendArea);
                        }
                        return forestTendArea;
                    }
                },
                {
                    field : 'yearendAfforestArea', 
                    title : '年末实有封山育林面积',
                    align : 'center',
                    footerFormatter:function (value) {
                        var yearendAfforestArea = 0;
                        for (var i in value) {
                            yearendAfforestArea += parseFloat(value[i].yearendAfforestArea);
                        }
                        return yearendAfforestArea;
                    }
                },
                {
                    field : 'manageAreaTotal', 
                    title : '年末实有森林管护面积合计',
                    align: 'center',
                    footerFormatter:function (value) {
                        var manageAreaTotal = 0;
                        for (var i in value) {
                            manageAreaTotal += parseFloat(value[i].manageAreaTotal);
                        }
                        return manageAreaTotal;
                    }
                },
     /*           {
                    field : 'nationalForest', 
                    title : '国有林'
                },
                {
                    field : 'nationalPublicForest', 
                    title : '集体和个人所有的国家级公益林'
                },
                {
                    field : 'localPublicForest', 
                    title : '集体和个人所有的地方公益林'
                },*/
                {
                    title: '操作',
                    class: 'W180',
                    align: 'center',
                    formatter: function(value, row, index) {
                        var actions = [];
                        actions.push('<a class="btn btn-success btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="$.operate.edit(\'' + row.id + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                        actions.push('<a class="btn btn-danger btn-xs ' + removeFlag + '" href="javascript:void(0)" onclick="$.operate.remove(\'' + row.id + '\')"><i class="fa fa-remove"></i>删除</a>');
                        actions.push('&nbsp;<a class="btn btn-info btn-xs ' + editFlag + '" href="javascript:void(0)" onclick="eveal(\'' + row.id + '\')"><i class="fa fa-edit"></i>分析</a>');
                        return actions.join('');
                    }
                }]
            };
            $.table.init(options);
        });

        layui.use('laydate', function () {
            var laydate = layui.laydate;

            //执行一个laydate实例
            laydate.render({
                elem: '#annual',
                type: 'year'
            });
        });

        /* 评价 */
        function eveal(id) {
            var url = prefix + '/eveal/' + id;
            $.modal.open("生态评价", url);
        }

    </script>
</body>
</html>