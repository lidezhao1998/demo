<script src="/static/js/jspdf.js"></script>

<script th:inline="javascript">
    var prefix = ctx + "system/grass";

    var year= [[${year}]];
    var province= [[${province}]];
    $(function () {
        $.post(prefix + "/list",{yea:year,provinc:province}, function(response) {
            let datas = response.datas;
            let yearCols = response.yearCols;
            let provinceRows = response.provinceRows;
            yearCols = yearCols.map((year) => ({
                field: String(year),
                title: String(year),
                rowspan: 2,
                colspan: 1,
                align: 'center',
                valign: 'middle',
                width: '10%',
                visible: true,
                footerFormatter:function (value) {
                    var sumBalance = 0;
                    for (var i in value) {
                        sumBalance += parseFloat(value[i].year);
                    }
                    return sumBalance;
                }
            }));


            var options = {
                exportUrl: prefix + "/export",
                striped: true,
                pagination:false,
                showExport: true,
                showSearch: false,
                showToggle: false,
                showColumns: false,
                showRefresh: false,
                modalName: "人工种草分省报表",
                exportOptions: {
                    fileName:"人工种草分省报表",
                    worksheetName:"人工种草分省报表",
                    tableName:"人工种草分省报表",
                    ignoreColumn: []  //忽略第一列和最后一列,默认忽略第一列
                },
                columns: [
                    [
                        {
                            field: 'province',
                            title: '省份/年份',
                            rowspan: 2,
                            colspan: 1,
                            align: 'center',
                            valign: 'middle',
                            width: '10%'
                        },
                    ].concat(yearCols),
                    [


                    ]
                ],
                data: datas.concat([datas.reduce((x, y) => { // 在原来的datas里面添加上合计后的结果
                    console.log(x,y);
            let sumObject = {}; // 所有合计的内容全部添加到这个对象中
            Object.keys(y).forEach(z => { // 遍历所有的键，例如2014,2015...
                if (z === "province") { // 给城市字段变为合计
                sumObject[z] = "合计";
                return;
            }
            // 每次让对象的中的值变成相加后的结果
            sumObject[z] = String(((Number(x[z]) || 0) + (Number(y[z]) || 0)).toFixed(2));
        });
            // 返回相加后的对象
            return sumObject;
        }, {})])
        };
            console.dir(options);
            $.table.init(options);
        });
    });

    layui.use('laydate', function () {
        var laydate = layui.laydate;

        //执行一个laydate实例
        laydate.render({
            elem: '#test2'
            , type: 'year'
        });
    });

   function EcharsLineChart(){
        var url = prefix + '/EcharsLineChart';
        $.modal.openFull("人工种草地分省折线图报表", url);
    }

    function EcharsHistogram(){
        var url = prefix + '/EcharsHistogram';
        $.modal.openFull("人工种草地分省柱状图报表", url);
    }

</script>
