<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('查看科技成果上报信息')" />
    <th:block th:include="include :: datetimepicker-css" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">

        <form class="form-horizontal m" id="form-allocation-edit" th:object="${kAllocation}">
            <h2 class="col-sm-12" style="text-align: center;font-weight: bold ">
                上报信息
            </h2>
            <h3 style="margin-left: 6%">
                ---------基本信息---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
            </h3>
            <input name="id" th:field="*{id}" id="id" type="hidden">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">调拨单号：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.oddnumber}" class="form-control-static" type="text" disabled="disabled"></div>
                        </div>
                    </div>
                </div>


                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">物资名称：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.name}" class="form-control-static" type="text" disabled="disabled"></div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">申请地区：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.applicationArea}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">调拨地区：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.allocationArea}" class="form-control-static" type="text" disabled="disabled"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">调出时间：</label>
                    <div class="col-sm-8">
                        <div name="creatTime" th:text="${#dates.format(kAllocation.allocationTime,'yyyy-MM-dd')}" class=" form-control-static"  style="font-weight: bold"  type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物编码：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.cargoCode}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>

            </div>

            <h3 style="margin-left: 6%">
                ----------详细信息---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
            </h3>
            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">送货人：</label>
                    <div class="col-sm-8">
                        <div   th:text="${kAllocation.deliveryman}" class="form-control-static" type="text" disabled="disabled"></div>

                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">送货人联系方式：</label>
                    <div class="col-sm-8">
                        <div   th:text="${kAllocation.deliverymanNumber}" class="form-control-static" type="text" disabled="disabled"></div>

                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人联系方式：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.receiverNumber}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.receiver}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>


            </div>


            <div class="row">

                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">货物数量：</label>
                    <div class="col-sm-8">
                        <div   th:text="${kAllocation.cargoNumber}" class="form-control-static" type="text" disabled="disabled"></div>

                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物金额：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.cargoMoney}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <label class="col-sm-3 control-label">货物名称：</label>
                    <div class="col-sm-8">
                        <div   th:text="${kAllocation.cargoName}" class="form-control-static" type="text" disabled="disabled"></div>

                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">调拨单状态：</label>
                        <div class="col-sm-8">
                            <div   th:text="${kAllocation.status}" class="form-control-static" type="text" disabled="disabled"></div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="button-b" style="margin-left: 70%" id="button-set">
            <button type="button" class="btn btn-w-m btn-danger" onclick="closeItem()" >关 闭</button>
            <button type="button" class="btn btn-w-m btn-info" onclick="report()" >确认上报</button>

        </div>
    </div>
    <th:block th:include="include :: footer" />
    <th:block th:include="include :: datetimepicker-js" />
    <script type="text/javascript">
        var prefix = ctx + "reserves/allocation";
        $("#form-allocation-edit").validate({
            focusCleanup: true
        });



        $("input[name='creatTime']").datetimepicker({
            format: "yyyy-mm-dd",
            minView: "month",
            autoclose: true
        });


        function report() {
            var id=$("#id").val();
                $.operate.save(prefix + "/cancel", {"id": id});
        }
    </script>
</body>
</html>