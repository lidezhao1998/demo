                // 获取文本框输入的值
                alert(id)
                $.operate.save(prefix + "/sh", {"id": id,"remark":value});

                layer.close(index);
                console.log("驳回："+id);
            },btn2: function(index, layero){
                alert(1232)
                var value = layero.find(".layui-layer-input").val();
            }
        });

    }


    function qr() {
       var id= $("#id").val();

        $.modal.confirm("确认要调拨吗？", function () {
            $.operate.save(prefix + "/sh", {"id": id});
        })
    }

    $("input[name='allocationTime']").datetimepicker({
        format: "yyyy-mm-dd",
        minView: "month",
        autoclose: true
    });
</script>
</body>
</html>