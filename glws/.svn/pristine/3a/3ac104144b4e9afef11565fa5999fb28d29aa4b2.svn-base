<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('新增调拨单')" />
    <th:block th:include="include :: datetimepicker-css" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-allocation-add">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>调拨单号：</label>

                        <div class="col-sm-8">
                            <input name="oddnumber" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>物资名称：</label>

                        <div class="col-sm-8">
                            <input name="name" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>申请地区：</label>

                        <div class="col-sm-8">
                            <input name="applicationArea" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>调拨地区：</label>

                        <div class="col-sm-8">
                            <input name="allocationArea" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>调出时间：</label>

                        <div class="col-sm-8">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input name="allocationTime" class="form-control" placeholder="yyyy-MM-dd" type="text" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>接货人：</label>

                        <div class="col-sm-8">
                            <input name="receiver" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>送货人：</label>
                        <div class="col-sm-8">
                            <input name="deliveryman" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人联系方式：</label>
                        <div class="col-sm-8">
                            <input name="receiverNumber" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">送货人联系方式：</label>
                        <div class="col-sm-8">
                            <input name="deliverymanNumber" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物编码：</label>
                        <div class="col-sm-8">
                            <input name="cargoCode" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>货物数量：</label>

                        <div class="col-sm-8">
                            <input name="cargoNumber" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>货物金额：</label>

                        <div class="col-sm-8">
                            <input name="cargoMoney" class="form-control" type="text">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"><span style="color: red; ">*</span>货物名称：</label>

                        <div class="col-sm-8">
                            <input name="cargoName" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>
        </form>

        <div class="col-sm-offset-5 col-sm-10">
            <button type="button" class="btn btn-sm btn-primary" th:onclick="submitHandler()"  ><i class="fa fa-check"></i>上 报</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-sm btn-primary" th:onclick="submitHandlerSave()"  ><i class="fa fa-check"></i>保 存</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-sm btn-danger" onclick="closeItem()"><i class="fa fa-reply-all"></i>关 闭 </button>
            <!--
                        <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset('form-publish-add', 'bootstrap-table1')"><i class="fa fa-refresh"></i>&nbsp;重置</a>
            -->

        </div>
    </div>
    <th:block th:include="include :: footer" />
    <th:block th:include="include :: datetimepicker-js" />
    <script type="text/javascript">
        var prefix = ctx + "reserves/allocation";
        $("#form-allocation-add").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/addReport", $('#form-allocation-add').serialize());
            }
        }

        function submitHandlerSave() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/add", $('#form-allocation-add').serialize());
            }
        }


        $("input[name='allocationTime']").datetimepicker({
            format: "yyyy-mm-dd",
            minView: "month",
            autoclose: true
        });
    </script>
</body>
</html>