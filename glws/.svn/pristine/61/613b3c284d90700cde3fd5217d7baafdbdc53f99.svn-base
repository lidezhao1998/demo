<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('草原鼠害发生与防治情况列表')" />
</head>
<style>
    /*修改表头颜色*/
    .table-striped table thead{
        background-color:rgba(48,146,62, 0.9);
        color: whitesmoke;
        height: 55px;
    }

    /*按钮背景色*/
    .btn-success{

        background-color:rgba(48,146,62, 0.9);

    }
</style>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <p>编号：</p>
                                <input type="text" name="number"/>
                            </li>
                            <li>
                                <p>年度：</p>
                                <input type="text" name="year"/>
                            </li>
                            <li>
                                <p>类型：</p>
                                <input type="text" name="type"/>
                            </li>
                            <li>
                                <p>县：</p>
                                <input type="text" name="county"/>
                            </li>

                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="zaihai:sczj:export">
                    <i class="fa fa-download"></i> 导出
                 </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">

        var detailFlag = [[${@permission.hasPermi('system:sczj:detail')}]];
        var detailFlag2 = [[${@permission.hasPermi('system:chfz:detail')}]];
        var detailFlag3 = [[${@permission.hasPermi('system:scny:detail')}]];
        var detailFlag4= [[${@permission.hasPermi('system:fznb:detail')}]];

        var prefix = ctx + "system/sczjjselect";
        var prefix1 = ctx + "system/sczjj";


        $(function() {
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                detailUrl: prefix + "/detail/{id}",
                modalName: "草原鼠害发生与防治情况",
                showSearch: false,
                showToggle: false,
                showColumns: false,
                showRefresh: false,
                columns: [
                {
                    field : 'id', 
                    title : '表id',
                    align: 'center',
                    valign: 'middle',
                    visible: false
                },
                {
                    field : 'number',
                    align: 'center',
                    valign: 'middle',
                    title : '编号'
                },
                {
                    field : 'year',
                    align: 'center',
                    valign: 'middle',

                    title : '年度'
                },
                {
                    field : 'week',
                    align: 'center',
                    valign: 'middle',

                    title : '周'
                },
                {
                    field : 'province',
                    align: 'center',
                    valign: 'middle',

                    title : '省'
                },
                {
                    field : 'city',
                    align: 'center',
                    valign: 'middle',

                    title : '市'
                },
                {
                    field : 'county',
                    align: 'center',
                    valign: 'middle',

                    title : '县'
                },
                {
                    field : 'type',
                    align: 'center',
                    valign: 'middle',

                    title : '类型'
                },

                {
                    align: 'center',
                    field : 'creatTime',
                    valign: 'middle',

                    title : '创建时间'
                },
                {
                    align: 'center',
                    field : 'status',
                    valign: 'middle',

                    title : '状态',
                    formatter: function (value, row, index) {
                        return statusTool(row);
                    }
                },
                    {
                        title: '操作',
                        align: 'center',
                        valign: 'middle',

                        formatter: function(value, row, index) {
                            if (row.type=='草原鼠害发生与防治'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs ' + detailFlag + '" href="javascript:void(0)" onclick="detail(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if (row.type=='草原虫害发生与防治'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs ' + detailFlag2 + '" href="javascript:void(0)" onclick="detail1(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if (row.type=='草原鼠虫害防治农药使用'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs ' + detailFlag3 + '" href="javascript:void(0)" onclick="detail2(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if(row.type=='发生防治年报'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs ' + detailFlag4 + '" href="javascript:void(0)" onclick="detail3(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }
                        }
                    }
                ]
            };
            $.table.init(options);
        });

        function statusTool(row) {
            if (row.status=='0') {
                return '<p>未上报</p> ';
            } else if (row.status=='1') {
                return '<p>已上报</p> ';
            }
        }




        function detail(id){
            $.modal.openTab("草原鼠害发生与防治",ctx + "caiji/sczj/detail/"+id);

        }
        function detail1(id){
            $.modal.openTab("草原虫害发生与防治页面",ctx + "caiji/chfz/detail/"+id);
        }

        function detail2(id){
            $.modal.openTab("草原鼠虫害防治农药使用",ctx + "caiji/scny/detail/"+id);
        }

        function detail3(id){
            $.modal.openTab("发生防治年报",ctx + "caiji/fznb/detail/"+id);
        }



    </script>
</body>
</html>