<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" xmlns:shiro="http://www.pollix.at/thymeleaf/shiro">
<head>
    <th:block th:include="include :: header('草原鼠害发生与防治情况列表')" />
</head>
<style>
    /*修改表头颜色*/
    .table-striped table thead{
        background-color:rgba(48,146,62, 0.9);
        color: whitesmoke;
        height: 55px;
    }

    /*按钮背景色*/
    .btn-success{

        background-color:rgba(48,146,62, 0.9);

    }
</style>
<body class="gray-bg">
     <div class="container-div">
        <div class="row">
            <div class="col-sm-12 search-collapse">
                <form id="formId">
                    <div class="select-list">
                        <ul>
                            <li>
                                <p>编号：</p>
                                <input type="text" name="number"/>
                            </li>
                            <li class="select-time">
                                <p>年度：</p>
                                <input type="text" name="year" class="layui-layer-input" placeholder="请选择" id="test2"/>
                            </li>
                            <li>
                                <p>类型：</p>

                                    <select  name="type" >
                                        <option value="">请选择</option>
                                        <option value="草原鼠害发生与防治">草原鼠害发生与防治</option>
                                        <option value="草原虫害发生与防治">草原虫害发生与防治</option>
                                        <option value="草原鼠虫害防治农药使用">草原鼠虫害防治农药使用</option>
                                        <option value="发生防治年报">发生防治年报</option>
                                    </select>
                            </li>
                            <li>
                                <div id="province">

                                    <em class="i-bit"></em><span>省：</span>
                                    <select id="addrProvince" name="province" onchange="getCities(this.value)"
                                            style="width: 150px;height:30px; "></select>
                                </div>
                            </li>

                            <li>
                                <div id="city">
                                    <em class="i-bit"></em><span>市：</span>
                                    <select id="addressCity" name="city" onchange="getAreas(this.value)"
                                            style="width: 150px;height:30px; "></select>
                                </div>
                            </li>

                            <li>
                                <div id="area">
                                    <input id="valuearea" type="hidden"/>
                                    <em class="i-bit"></em><span>县/区：</span>

                                    <select id="addrArea" name="county"
                                            style="width: 150px;height:30px; ">
                                    </select>
                                </div>
                            </li>
                            <li>
                                <a class="btn btn-primary btn-rounded btn-sm" onclick="$.table.search()"><i class="fa fa-search"></i>&nbsp;搜索</a>
                                <a class="btn btn-warning btn-rounded btn-sm" onclick="$.form.reset()"><i class="fa fa-refresh"></i>&nbsp;重置</a>
                            </li>
                        </ul>
                    </div>
                </form>
            </div>
            <div class="btn-group-sm" id="toolbar" role="group">
                <a class="btn btn-warning" onclick="$.table.exportExcel()" shiro:hasPermission="zaihai:sczj:export">
                    <i class="fa fa-download"></i> 导出
                 </a>
            </div>
            <div class="col-sm-12 select-table table-striped">
                <table id="bootstrap-table"></table>
            </div>
        </div>
    </div>
    <th:block th:include="include :: footer" />
    <script th:inline="javascript">

        var detailFlag = [[${@permission.hasPermi('caiji:sczj:detail')}]];
        var detailFlag2 = [[${@permission.hasPermi('caiji:chfz:detail')}]];
        var detailFlag3 = [[${@permission.hasPermi('caiji:scny:detail')}]];
        var detailFlag4= [[${@permission.hasPermi('caiji:fznb:detail')}]];

        var prefix = ctx + "caiji/sczjjselect";
        var prefix1 = ctx + "caiji/sczjj";

        layui.use('laydate', function () {
            var laydate = layui.laydate;

            //执行一个laydate实例
            laydate.render({
                elem: '#test2'
                , type: 'year'
            });
        });

        $(function() {
            var options = {
                url: prefix + "/list",
                createUrl: prefix + "/add",
                updateUrl: prefix + "/edit/{id}",
                removeUrl: prefix + "/remove",
                exportUrl: prefix + "/export",
                detailUrl: prefix + "/detail/{id}",
                modalName: "草原鼠害发生与防治情况",
                showSearch: false,
                showToggle: false,
                showColumns: false,
                showRefresh: false,
                columns: [
                {
                    field : 'id', 
                    title : '表id',
                    align: 'center',
                    valign: 'middle',
                    visible: false
                },
                {
                    field : 'number',
                    align: 'center',
                    valign: 'middle',
                    title : '编号'
                },
                {
                    field : 'year',
                    align: 'center',
                    valign: 'middle',

                    title : '年度'
                },
                {
                    field : 'week',
                    align: 'center',
                    valign: 'middle',

                    title : '周'
                },
                {
                    field : 'province',
                    align: 'center',
                    valign: 'middle',

                    title : '省'
                },
                {
                    field : 'city',
                    align: 'center',
                    valign: 'middle',

                    title : '市'
                },
                {
                    field : 'county',
                    align: 'center',
                    valign: 'middle',

                    title : '县'
                },
                {
                    field : 'type',
                    align: 'center',
                    valign: 'middle',

                    title : '类型'
                },

                {
                    align: 'center',
                    field : 'creatTime',
                    valign: 'middle',

                    title : '创建时间'
                },
                {
                    align: 'center',
                    field : 'status',
                    valign: 'middle',

                    title : '状态',
                    formatter: function (value, row, index) {
                        return statusTool(row);
                    }
                },
                    {
                        title: '操作',
                        align: 'center',
                        valign: 'middle',

                        formatter: function(value, row, index) {
                            if (row.type=='草原鼠害发生与防治'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs " href="javascript:void(0)" onclick="detail(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if (row.type=='草原虫害发生与防治'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs" href="javascript:void(0)" onclick="detail1(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if (row.type=='草原鼠虫害防治农药使用'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs" href="javascript:void(0)" onclick="detail2(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }else if(row.type=='发生防治年报'){
                                var actions = [];
                                actions.push('<a class="btn btn-info btn-xs " href="javascript:void(0)" onclick="detail3(\'' + row.id + '\')"><i class="fa fa-search"></i>详情</a> ');
                                return actions.join('');
                            }
                        }


                    }
                ],onLoadSuccess: function (row) {
                    if (row.rows!=null && row.rows.length>0){
                        var roleName = row.rows[0].params.roleName;
                        var codeAddess = row.rows[0].params.codeAddess;

                        if(roleName=='省级' ||roleName=="省级审核员"){
                            getCities(codeAddess)
                            $('#province').hide();

                        }else if(roleName=='市级'){

                            getAreas(codeAddess)
                            $('#city').hide();
                            $('#province').hide();
                        }

                    }

                }
            };
            $.table.init(options);
        });

        function statusTool(row) {
            if (row.status=='0') {
                return '<p>未上报</p> ';
            } else if (row.status=='1') {
                return '<p>已上报</p> ';
            }
        }




        function detail(id){
            $.modal.openTab("草原鼠害发生与防治",ctx + "caiji/sczj/detail/"+id);

        }
        function detail1(id){
            $.modal.openTab("草原虫害发生与防治页面",ctx + "caiji/chfz/detail/"+id);
        }

        function detail2(id){
            $.modal.openTab("草原鼠虫害防治农药使用",ctx + "caiji/scny/detail/"+id);
        }

        function detail3(id){
            $.modal.openTab("发生防治年报",ctx + "caiji/fznb/detail/"+id);
        }

        //省市区三级联动
        $(function () {
            var prefix11 = ctx + "caiji/survey";

            getProvinces();
            var op1 = document.createElement("option");
            op1.value = '';
            document.getElementById("addrCity").appendChild(op1);
            var op2 = document.createElement("option");
            op2.value = '';
            document.getElementById("addrArea").appendChild(op2);
            var op3 = document.createElement("option");

        });

        function getProvinces() {
            //  var url = "<%=basePath%>dict/getProvinces";
            var url = ctx + "caiji/survey/getProvinces";
            $.ajax({
                "url": url,
                "type": "GET",
                "dataType": "json",
                "success": function (data) {
                    //alert(JSON.stringify(data))
                    var op = document.createElement("option");
                    op.value = '';
                    op.text = "----- 请选择 -------";
                    document.getElementById("addrProvince").appendChild(op);
                    for (var i = 0; i < data.length; i++) {
                        var op = document.createElement("option");
                        op.value = data[i].dictLabel;
                        op.text = data[i].dictLabel;
                        document.getElementById("addrProvince").appendChild(op);
                    }
                }
            });
            getCities();
        }

        // ===== 加载市列表 =====
        function getCities(value) {
            $("#addressCity").empty();
            $("#addrArea").empty();
            var url = ctx + "caiji/survey/getCities";
            var data = "provinceCode=" + value;
            $.ajax({
                "url": url,
                "data": data,
                "type": "GET",
                "dataType": "json",
                "success": function (data) {
                    var op = document.createElement("option");
                    op.value = '';
                    document.getElementById("addressCity").appendChild(op);
                    for (var i = 0; i < data.length; i++) {
                        var op = document.createElement("option");
                        op2.value = '请选择';
                        op.value = data[i].dictLabel;
                        op.text = data[i].dictLabel;
                        document.getElementById("addressCity").appendChild(op);
                    }
                }
            });
            var op2 = document.createElement("option");
            op2.value = '';
            document.getElementById("addrArea").appendChild(op2);
        }

        // ===== 加载区列表 =====
        function getAreas(value) {
            $("#addrArea").empty();
            $("#addrdz").empty();
            //var url = "<%=basePath%>dict/getAreas";
            var url = ctx + "caiji/survey/getAreasLable";
            var data = "cityCode=" + value;
            $.ajax({
                "url": url,
                "data": data,
                "type": "GET",
                "dataType": "json",
                "success": function (data) {
                    var op = document.createElement("option");
                    op.value = '';
                    document.getElementById("addrArea").appendChild(op);
                    for (var i = 0; i < data.length; i++) {
                        var op = document.createElement("option");
                        op.value = data[i].dictLabel;
                        op.text = data[i].dictLabel;
                        document.getElementById("addrArea").appendChild(op);
                    }
                }
            });

        }

    </script>
</body>
</html>