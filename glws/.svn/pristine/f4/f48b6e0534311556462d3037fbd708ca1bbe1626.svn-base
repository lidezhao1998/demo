<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
    <th:block th:include="include :: header('修改入库')" />
    <th:block th:include="include :: datetimepicker-css" />
</head>
<body class="white-bg">
    <div class="wrapper wrapper-content animated fadeInRight ibox-content">
        <form class="form-horizontal m" id="form-instock-edit" th:object="${kInstock}">
            <input name="id" th:field="*{id}" type="hidden">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">物资名称：</label>
                        <div class="col-sm-8">
                            <input name="name" th:field="*{name}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">入库时间：</label>
                        <div class="col-sm-8">
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                <input name="warehousingTime" th:value="${#dates.format(kInstock.warehousingTime, 'yyyy-MM-dd')}" class="form-control" placeholder="yyyy-MM-dd" type="text">
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">入库方式：</label>
                        <div class="col-sm-8">
                            <input name="warehousingMode" th:field="*{warehousingMode}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人：</label>
                        <div class="col-sm-8">
                            <input name="receiver" th:field="*{receiver}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">入库方式：</label>
                        <div class="col-sm-8">
                            <input name="warehousingMode" th:field="*{warehousingMode}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人：</label>
                        <div class="col-sm-8">
                            <input name="receiver" th:field="*{receiver}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">接货人电话：</label>
                        <div class="col-sm-8">
                            <input name="receiverNumber" th:field="*{receiverNumber}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">送货人：</label>
                        <div class="col-sm-8">
                            <input name="deliveryPerson" th:field="*{deliveryPerson}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">送货人电话：</label>
                        <div class="col-sm-8">
                            <input name="reasonNumber" th:field="*{reasonNumber}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物数量：</label>
                        <div class="col-sm-8">
                            <input name="goodsNumber" th:field="*{goodsNumber}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">货物金额：</label>
                        <div class="col-sm-8">
                            <input name="goodsMoney" th:field="*{goodsMoney}" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label class="col-sm-3 control-label">原因：</label>
                        <div class="col-sm-8">
                            <input name="reason" th:field="*{reason}" class="form-control" type="text">
                        </div>
                    </div>
                </div>

            </div>
        </form>
        <div class="col-sm-offset-5 col-sm-10">
            <button type="button" class="btn btn-sm btn-primary" th:onclick="submitHandler()"  ><i class="fa fa-check"></i>保 存</button>&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-sm btn-danger" onclick="closeItem()"><i class="fa fa-reply-all"></i>关 闭 </button>

        </div>
    </div>
    <th:block th:include="include :: footer" />
    <th:block th:include="include :: datetimepicker-js" />
    <script type="text/javascript">
        var prefix = ctx + "system/instock";
        $("#form-instock-edit").validate({
            focusCleanup: true
        });

        function submitHandler() {
            if ($.validate.form()) {
                $.operate.save(prefix + "/edit", $('#form-instock-edit').serialize());
            }
        }

        $("input[name='warehousingTime']").datetimepicker({
            format: "yyyy-mm-dd hh:ii:ss",
            minView: "month",
            autoclose: true
        });
    </script>
</body>
</html>