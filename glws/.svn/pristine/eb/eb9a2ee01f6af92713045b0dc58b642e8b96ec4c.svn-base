<!DOCTYPE html>
<html lang="zh" xmlns:th="http://www.thymeleaf.org" >
<head>
	<th:block th:include="include :: header('添加物候调查数据')" />
</head>
<body class="white-bg">
    <div class="main-content">
        <form class="form-horizontal" id="form-recoveryQuestion-add" >

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">物候现象：</label>
                        <div class="col-sm-5">
                            <select id="phenology" name="phenology" class="form-control m-b-xs">
                                <option value="1">返青期</option>
                                <!--<option value="2">生长期</option>-->
                                <option value="3">枯黄期</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">地点：</label>
                        <div class="col-sm-5">
                            <input id="address" name="address" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div id="fq" class="form-group">
                        <label id="wh" class="col-sm-5 control-label">返青日期：</label>
                        <div class="col-sm-5">
                            <input name="greenDate" type="text" class="form-control" id="greenDate"  required>
                        </div>
                    </div>

                    <!--<div id="kh" style="display: none" class="form-group">-->
                        <!--<label class="col-sm-5 control-label">枯黄日期：</label>-->
                        <!--<div class="col-sm-5">-->
                            <!--<input name="greenDate" type="text" class="form-control" id="greenDate"  required>-->
                        <!--</div>-->
                    <!--</div>-->
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">北纬：</label>
                        <div class="col-sm-5">
                            <input id="northrrnLatitude" name="northrrnLatitude" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">东经：</label>
                        <div class="col-sm-5">
                            <input id="eastLongitude" name="eastLongitude" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">调查人：</label>
                        <div class="col-sm-5">
                            <input id="surveyUser" name="surveyUser" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">海拔1：</label>
                        <div class="col-sm-5">
                            <input id="altitude" name="altitude" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">草地类：</label>
                        <div class="col-sm-5">
                            <input id="grasslandClass" name="grasslandClass" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">草地型：</label>
                        <div class="col-sm-5">
                            <input id="grasslandType" name="grasslandType" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">地形原貌：</label>
                        <div class="col-sm-5">
                            <input id="terrainOriginal" name="terrainOriginal" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">牧草种类：</label>
                        <div class="col-sm-5">
                            <input id="forageSpecies" name="forageSpecies" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">与常年比较方式：</label>
                        <div class="col-sm-5">
                            <select name="compareWay" class="form-control m-b" th:with="type=${@dict.getType('compareWay')}">
                                <option th:each="dict : ${type}" th:text="${dict.dictLabel}" th:value="${dict.dictValue}"></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-5 control-label">与常年比较变化天数：</label>
                        <div class="col-sm-5">
                            <input id="compareDayss" name="compareDayss" class="form-control" type="text" required>
                        </div>
                    </div>
                </div>
            </div>

    	</form>
    </div>
    <th:block th:include="include :: datetimepicker-js" />
    <th:block th:include="include :: footer" />
