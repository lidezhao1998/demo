<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.GradeSettingMapper">
    
    <resultMap type="GradeSetting" id="GradeSettingResult">
        <result property="id"    column="id"    />
        <result property="gradeName"    column="grade_name"    />
        <result property="gradeValue"    column="grade_value"    />
        <result property="gradeDesc"    column="grade_desc"    />
        <result property="gradeType"    column="grade_type"    />
    </resultMap>

    <sql id="selectGradeSettingVo">
        select id, grade_name, grade_value, grade_desc, grade_type from grade_setting
    </sql>

    <select id="selectGradeSettingList" parameterType="GradeSetting" resultMap="GradeSettingResult">
        <include refid="selectGradeSettingVo"/>
        <where>  
            <if test="gradeName != null  and gradeName != ''"> and grade_name like concat('%', #{gradeName}, '%')</if>
            <if test="gradeValue != null "> and grade_value = #{gradeValue}</if>
            <if test="gradeDesc != null  and gradeDesc != ''"> and grade_desc = #{gradeDesc}</if>
            <if test="gradeType != null  and gradeType != ''"> and grade_type = #{gradeType}</if>
        </where>
    </select>
    
    <select id="selectGradeSettingById" parameterType="Integer" resultMap="GradeSettingResult">
        <include refid="selectGradeSettingVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertGradeSetting" parameterType="GradeSetting" useGeneratedKeys="true" keyProperty="id">
        insert into grade_setting
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="gradeName != null  and gradeName != ''">grade_name,</if>
            <if test="gradeValue != null ">grade_value,</if>
            <if test="gradeDesc != null  and gradeDesc != ''">grade_desc,</if>
            <if test="gradeType != null  and gradeType != ''">grade_type,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="gradeName != null  and gradeName != ''">#{gradeName},</if>
            <if test="gradeValue != null ">#{gradeValue},</if>
            <if test="gradeDesc != null  and gradeDesc != ''">#{gradeDesc},</if>
            <if test="gradeType != null  and gradeType != ''">#{gradeType},</if>
         </trim>
    </insert>

    <update id="updateGradeSetting" parameterType="GradeSetting">
        update grade_setting
        <trim prefix="SET" suffixOverrides=",">
            <if test="gradeName != null  and gradeName != ''">grade_name = #{gradeName},</if>
            <if test="gradeValue != null ">grade_value = #{gradeValue},</if>
            <if test="gradeDesc != null  and gradeDesc != ''">grade_desc = #{gradeDesc},</if>
            <if test="gradeType != null  and gradeType != ''">grade_type = #{gradeType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGradeSettingById" parameterType="Integer">
        delete from grade_setting where id = #{id}
    </delete>

    <delete id="deleteGradeSettingByIds" parameterType="String">
        delete from grade_setting where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>