<script th:inline="javascript">
    var remotesensingEditFlag = [[${@permission.hasPermi('integration:remotesensing:edit')}]];
    var remotesensingRemoveFlag = [[${@permission.hasPermi('integration:remotesensing:remove')}]];
    var remotesensingDetailFlag = [[${@permission.hasPermi('ntegration:remotesensing:detail')}]];
    var remotesensingPrefix = ctx + "integration/remoteSensing";
    $(function () {
        $("#showTableButton").hide();
        var aaaoptions = {
            id: "slsj",
            toolbar: "shptoolbar",
            url: remotesensingPrefix+"/list",
            createUrl: remotesensingPrefix + "/add/{id}",
            updateUrl: remotesensingPrefix + "/edit/{id}",
            removeUrl: remotesensingPrefix + "/remove/{id}",
            unexamine: remotesensingPrefix + "/unexamine/{id}",
            examine: remotesensingPrefix + "/examine/{id}",
            modalName: "shp文件",
            detailUrl: remotesensingPrefix + "/details/{id}",
            pageSize:3,
            pageList:[5,10,15,20],//分页步进值
            showSearch: false,
            showToggle: false,
            showColumns: false,
            showRefresh: false,
            columns: [{
                checkbox: true,
                formatter:  function (value, row, index) {
                    if (row.status == 1){
                        return {
                            disabled : true//设置是否可用
                        };
                    }
                }
            },
                {
                    field: 'id',
                    title: 'ID'
                },
                {
                    field: 'item',
                    title: '目'
                },
                {
                    field: 'section',
                    title: '科'
                },
                {
                    field: 'generic',
                    title: '属'
                },
                {
                    field: 'bundle',
                    title: '丛'
                },
                {
                    field: 'provinceName',
                    title: '分布范围'
                },
                {
                    field: 'area',
                    title: '面积(平方米)'
                },
                {
                    field: 'status',
                    title: '状态',
                    formatter: function (value, row, index) {
                        if(value==1){
                            return "已审核";
                        }else if (value==0) {
                            return "未审核";
                        }
                    }
                },
                {
                    title: '操作',
                    align: 'left',
                    formatter: function (value, row, index) {
                        if (row.parentId != 0) {
                            var actions = [];
                            /*查看按钮*/
                            if (isHasPermissionDetails){
                                actions.push('<a class="btn btn-info  btn-xs " href="javascript:void(0)" onclick="show(' + row.id + ',\''+row.geomData+'\')"><i class="fa fa-search"></i>查看</a> ');
                            }
                            if(row.status!='1'){
                                /*审核通过按钮*/
                                if (isHasPermissionPass){

                                    actions.push('<a class="btn btn-warning btn-xs" href="javascript:void(0)" onclick="examine(\'' + row.id + '\')"><i class="fa fa-adjust"></i>审核通过</a>');
                                }
                                /*编辑按钮*/
                                if (isHasPermissionEdit){
                                    actions.push('<a class="btn btn-success btn-xs " href="javascript:void(0)" onclick="$.operate.edit(\'' + row.id + '\')"><i class="fa fa-edit"></i>编辑</a> ');
                                }
                                /*删除按钮*/
                                if (isHasPermissionDelete){

                                    actions.push('<a class="btn btn-danger btn-xs " href="javascript:void(0)" onclick="$.operate.remove(\'' + row.id + '\')"><i class="fa fa-trash"></i>删除</a>');
                                }
                            }else{
                                /*驳回按钮*/
                                if (isHasPermissionReject){

                                    actions.push('<a class="btn btn-warning btn-xs" href="javascript:void(0)" onclick="unexamine(\'' + row.id + '\')"><i class="fa fa-adn"></i>驳回审核</a>');
                                }
                            }
                            return actions.join('');
                        } else {
                            return "";
                        }
                    }
                }]
        };
        $.table.init(aaaoptions);
    });

    function imgShow(id) {
        $.ajax({
            type: "post",
            url: remotesensingPrefix + "/detail",
            data: {
                "id": id
            },
            success: function (msg) {
                if (msg.imgUrl != null && msg.imgUrl != "") {
                    $('#img').attr("src", msg.imgUrl);
                } else {
                    alert("图片无效");
                }
            }
        });
    }
    function downLoad(id) {
        window.location.href = remotesensingPrefix + "/download/"+id;
    }
    function audit(id) {
        $.modal.confirm("确定审核通过吗？", function() {
            $.operate.post(remotesensingPrefix + "/audit", {"id": id });
        })
    }
    function auditAll() {
        var ids=$("#remotesensing-table").bootstrapTable("getAllSelections")
        if (ids.length == 0) {
            $.modal.alertWarning("请至少选择一条记录");
            return;
        }
        $.modal.confirm("确定要审核通过" + ids.length + "条数据吗?", function() {
            var data="0";
            for(var i=0;i<ids.length;i++){
                data+=","+ids[i].id
            }
            $.operate.post(remotesensingPrefix + "/auditAll",{"ids":data});
        });
    }
    function examine(id) {
        var data={"id":id}
        $.modal.confirm("确定审核通过吗？", function() {
                $.ajax({
                    type: "post",
                    url: remotesensingPrefix + "/examine",
                    data: data,
                    success: function () {
                        $.table.search('dept-form','slsj')
                        $.modal.msgSuccess("操作成功");
                    }
                });
        })
    }
    function unexamine(id) {
        var data={"id":id}
        $.modal.confirm("确定取消审核吗？", function() {
            $.ajax({
                type: "post",
                async:false,
                url: remotesensingPrefix + "/unexamine",
                data: data,
                success: function () {
                    $.table.search('dept-form','slsj')
                    $.modal.msgSuccess("操作成功");
                }
            });
        })
    }
    function unaudit(id) {
        $.modal.confirm("确定取消审核吗？", function() {
            $.operate.post(remotesensingPrefix + "/unaudit", {"id": id });
        })
    }
    function auditshp(id) {
        $.modal.confirm("确定审核通过吗？", function() {
            $.operate.post(remotesensingPrefix + "/auditShp", {"id": id });
        })
    }
    function unauditshp(id) {
        $.modal.confirm("确定取消审核吗？", function() {
            $.operate.post(remotesensingPrefix + "/unauditShp", {"id": id });
        })
    }
    function auditAllshp() {
        var ids=$("#slsj").bootstrapTable("getAllSelections")
        if (ids.length == 0) {
            $.modal.alertWarning("请至少选择一条记录");
            return;
        }
        $.modal.confirm("确定要审核通过" + ids.length + "条数据吗?", function() {
            var data="0";
            for(var i=0;i<ids.length;i++){
                data+=","+ids[i].shpFileId
            }
            $.operate.post(remotesensingPrefix + "/auditAllShp",{"ids":data});
        });
    }

    function show(id,geomData){
        shpInfo(id,geomData);
    }
