    function shpInfo(id,geomData) {
        clearGis(map);
        var cql="id=" + id ;
        var tiled = new ol.layer.Tile({
            source: new ol.source.TileWMS({
                url: gisUrl + urlLayer,
                params: {
                    FORMAT: 'image/png',
                    VERSION: '1.1.1',
                    tiled: true,
                    exceptions: 'application/vnd.ogc.se_inimage',
                    LAYERS:"gis:grasslandecology",
                    CQL_FILTER: cql
                }
            })
        });
        map.addLayer(tiled);
        pointLocation(geomData);
    }



