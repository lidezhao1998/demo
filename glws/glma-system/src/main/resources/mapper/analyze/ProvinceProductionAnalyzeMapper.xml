<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.analyze.mapper.ProvinceProductionAnalyzeMapper">
    
    <resultMap type="ProvinceProductionAnalyze" id="ProvinceProductionAnalyzeResult">
    	<id     property="id"      column="id"      />
        <result property="year"    column="year"    />
        <result property="province"     column="province"     />
        <result property="dryWeight"    column="dry_weight"    />
        <result property="wetWeight"     column="wet_weight"     />
        <result property="sum"     column="sum"     />
        <result property="createBy"      column="create_by"      />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"      column="update_by"      />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
    
    <sql id="selectProvinceProductionAnalyzeVo">
        select id,year,province,dry_weight,wet_weight,(dry_weight+wet_weight) sum,create_by,create_time,update_by,update_time
		from a_province_production_analyze
    </sql>
    
    <!-- 查询条件 -->
	<sql id="sqlwhereSearch">
		<where>
			<if test="id !=null">
				and id = #{id}
			</if>
		</where>
	</sql>
    
    <select id="selectProvinceProductionAnalyze" parameterType="ProvinceProductionAnalyze" resultMap="ProvinceProductionAnalyzeResult">
        <include refid="selectProvinceProductionAnalyzeVo"/>
        <include refid="sqlwhereSearch"/>
    </select>
    
    <select id="selectProvinceProductionAnalyzeList" parameterType="ProvinceProductionAnalyze" resultMap="ProvinceProductionAnalyzeResult">
        <include refid="selectProvinceProductionAnalyzeVo"/>
        <where>
			<if test="id != null and id != ''">
				AND id =#{id}
			</if>
            <if test="year != null and year != ''">
                AND year =#{year}
            </if>
            <if test="province != null and province != ''">
                AND province =#{province}
            </if>
		</where>
    </select>

    <select id="selectYearGroup" parameterType="ProvinceProductionAnalyze" resultType="String">
        select year from a_province_production_analyze GROUP BY year order by year desc
    </select>


    <select id="selectProductionGroup" parameterType="ProvinceProductionAnalyze" resultType="String">
        select province from a_province_production_analyze GROUP BY province
    </select>


    
</mapper>